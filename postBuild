#!/bin/bash
set -e  # Exit on error

echo "Installing Playwright Chromium browser..."

# Determine Python command
PYTHON_CMD="python3"
if ! command -v python3 &> /dev/null; then
    PYTHON_CMD="python"
fi

# Install Playwright browser binaries
$PYTHON_CMD -m playwright install chromium

# Install system dependencies (if install-deps is available)
$PYTHON_CMD -m playwright install-deps chromium || echo "Note: install-deps not available, system packages should be installed via packages.txt"

echo "Playwright Chromium installation completed!"
